<%- include("../partials/head.ejs") %>

<body>
    <!--Barra de navegación-->

    <%- include("../partials/navBar.ejs") %> 

    <!--Botón flotante de inicio de sesión-->

    <%- include("../partials/buttonFlot.ejs") %>

    <!--Formulario de inicio de sesión-->

    <div class="container marginBarra">
        <div class="row d-flex justify-content-center my-4">
            <h1 class="fs-1 text-dark text-center mt-2 mb-4">Iniciar Sesión</h1>
            <form class="col-4">
                <div class="row mb-3">
                    <label for="inputEmail" class="col-3 col-form-label">Email</label>
                    <div class="col-9">
                        <input type="email" class="form-control" id="inputEmail">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputPassword" class="col-sm-3 col-form-label">Password</label>
                    <div class="col-sm-9">
                        <input type="password" class="form-control" id="inputPassword">
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-dark">Iniciar Sesión</button>
                </div>
            </form>
        </div>
        <div class="row">
            <div class="text-center my-3 col">¿No tenés cuenta? <a class="link-dark" href="/register">¡Registrate!</a></div>
        </div>
    </div>
    
    <!--Footer-->

    <%- include("../partials/footer.ejs") %>

    <!--JS Bootstrap-->

    <%- include("../partials/jsBootstrap.ejs") %>

</body>
</html>